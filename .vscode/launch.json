{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Electron (Main)",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/main.mjs",
            "runtimeExecutable": "electron",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "console": "integratedTerminal"
        }
